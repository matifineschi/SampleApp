<% if user_signed_in? %>
  <div class="center">
    <%= link_to 'New Pin', new_pin_path , class: "btn btn-primary" %>
  </div>
<%end%>

<div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
      <div class="box panel panel-dafault">
        <%= link_to image_tag(pin.image.url(:medium)), pin_path(pin) %>
        <div clas="panel-body">
            <%= pin.description %> </br>
            <strong><%= pin.user.email if pin.user %></strong>
            <% if pin.user == current_user %>
              <div class="actions center">
                <%= link_to 'Edit', edit_pin_path(pin) %>
                <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            <%end%>
        </div>
      </div>
    <% end %>
</div>



